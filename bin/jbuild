(executable
 ((name        main)
  (public_name jbuilder)
  (modules     (:standard \ gen_arg_info))
  (libraries   (unix jbuilder jbuilder_cmdliner))
  (preprocess  no_preprocessing)))

(executable
 ((name        gen_arg_info)
  (modules     (gen_arg_info))
  (libraries   (unix jbuilder jbuilder_cmdliner))
  (preprocess  no_preprocessing)))

(rule
 (with-stdout-to arg_info.ml
  (run ./gen_arg_info.exe
   ${path:doc/common.txt}
)))
