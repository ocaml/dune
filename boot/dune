(rule
 (mode promote)
 (action
  (copy ../bin/bootstrap-info libs.ml)))

(alias
 (name runtest)
 (deps libs.ml))

(alias
 (name check)
 (deps libs.ml))

(executable
 (name duneboot)
 (modules :standard \ configure bootstrap)
 (libraries unix))

(executable
 (name configure)
 (preprocess
  (action
   (run tail -n +2 %{input-file})))
 (modules configure))

(executable
 (name bootstrap)
 (modules bootstrap))
