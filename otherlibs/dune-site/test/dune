(cram
 (applies_to :whole_subtree)
 (deps
  (package dune)
  (package dune-site)))

; The test being broken on CI, we deactivate it when
; we detect that the CI environment variable is not
; set. Most CI systems set it.

(cram
 (applies_to run_2_9 run)
 (enabled_if
  (and
   (<> %{os_distribution} nixos)
   (not %{env:CI=false}))))
