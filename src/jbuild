(jbuild_version 1)

(library
 ((name        jbuilder)
  ;;  (public_name jbuilder)
  (libraries   (unix
                stdune
                fiber
                xdg
		jbuilder_re
		jbuilder_opam_file_format
                usexp))
  (synopsis    "Internal Jbuilder library, do not use!")))

(ocamllex (meta_lexer glob_lexer))

(rule
 ((targets (setup.ml))
  (mode    fallback)
  (action  (copy# setup.defaults.ml setup.ml))))
