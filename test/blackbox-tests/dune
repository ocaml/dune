(data_only_dirs test-cases)

(executable
 (name cram)
 (modules cram)
 (libraries stdune which_program_dune test_common dune configurator))

(executable
 (name sanitize)
 (modules sanitize)
 (libraries str))

(ocamllex cram)

(executable
 (name gen_tests)
 (libraries stdune dune_lang)
 (modules gen_tests))

(include dune.inc)

(rule
 (targets dune.inc.gen)
 (deps    (source_tree test-cases))
 (action  (with-stdout-to %{targets} (run ./gen_tests.exe))))

(alias
 (name runtest)
 (action (diff dune.inc dune.inc.gen)))
