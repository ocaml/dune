(alias
 ((name runtest-js)
  (deps ((files_recursively_in test-cases/js_of_ocaml)))
  (action
   (chdir test-cases/js_of_ocaml
    (setenv JBUILDER ${bin:jbuilder}
     (setenv NODE ${bin:node}
      (run ${exe:cram.exe} run.t)))))))

