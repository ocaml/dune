(rule
 (target
  (dir a))
 (action
  (progn
   (run mkdir -p a/share)
   (run touch a/share/readme_a.txt))))

(install
 (section share_root)
 (package a)
 (dirs
  (a/share as .)))

(rule
 (target
  (dir b))
 (action
  (progn
   (run mkdir -p b/share)
   (run touch b/share/readme_b.txt))))

(install
 (section share_root)
 (package b)
 (dirs
  (b/share as .)))
