(cram
 (setup_scripts helpers.sh)
 (applies_to :whole_subtree))

(cram
 (deps %{bin:curl})
 (applies_to ocamlformat-e2e))

(cram
 (deps %{bin:md5sum})
 (applies_to ocamlformat-patch-extra-files))

(rule
 (alias runtest)
 (deps helpers.sh)
 (action
  (run %{bin:bash} -n %{deps})))

(rule
 (alias runtest)
 (enabled_if %{bin-available:shellcheck})
 (deps helpers.sh)
 (action
  (run %{bin:shellcheck} -s bash %{deps})))
