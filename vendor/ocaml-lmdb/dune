(library
 (name lmdb)
 (synopsis
  "Bindings for LMDB, a fast in-file database with ACID transactions")
 (libraries unix bigstringaf)
 (foreign_stubs
  (language c)
  (flags
   :standard
   -I
   .
   (:include c_flags.sexp))
  (names lmdb_stubs mdb midl)))

(rule
 (with-stdout-to
  c_flags.sexp
  (run %{ocaml} %{dep:gen_c_flags.ml} %{ocaml-config:ccomp_type})))
